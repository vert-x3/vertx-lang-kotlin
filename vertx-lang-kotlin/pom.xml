    <profile>
      <id>repo</id>
      <activation>
        <property>
          <name>!skipRepo</name>
        </property>
      </activation>
      <pluginRepositories>
        <pluginRepository>
          <id>jcenter</id>
          <name>JCenter</name>
          <url>https://jcenter.bintray.com/</url>
        </pluginRepository>
